@using System.Text.RegularExpressions;

@inject UserService UserService
@inject FolderService FolderService
@inject SetService SetService
@inject NavigationManager Navigation
@inject IStringLocalizer<BreadcrumbNavigation> Loc

<div class="container-fluid mt-2">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-2">
            @if (UserService.CurrentUser?.Username is not null)
            {
                <li class="breadcrumb-item"><a href="@($"{UserService.CurrentUser!.Username}/profile")">@UserService.CurrentUser!.Username</a></li>

                @if (Regex.IsMatch(CurrentPage, @$"^{Navigation.BaseUri}\w+/sets(/\d+)?"))
                {
                    <li class="breadcrumb-item"><a href="@($"{UserService.CurrentUser!.Username}/sets")">@Loc["Folders"]</a></li>
                }
                @if (Regex.IsMatch(CurrentPage, @$"^{Navigation.BaseUri}\w+/sets/\d+"))
                {
                    <li class="breadcrumb-item"><a href="@($"{UserService.CurrentUser!.Username}/sets/{FolderService.CurrentFolder!.Id}")">@FolderService.CurrentFolder.Name</a></li>
                }
                @if (Regex.IsMatch(CurrentPage, @$"^{Navigation.BaseUri}\w+/sets/\d+/\d+"))
                {
                    <li class="breadcrumb-item"><a href="@($"{UserService.CurrentUser!.Username}/sets/{FolderService.CurrentFolder!.Id}/{SetService.CurrentSet!.Id}")">@SetService.CurrentSet.Name</a></li>
                }
                @if (Regex.IsMatch(CurrentPage, @$"^{Navigation.BaseUri}\w+/sets/\d+/\d+/flashcards"))
                {
                    <li class="breadcrumb-item active" aria-current="page">@Loc["Flashcards"]</li>
                }
                @if (Regex.IsMatch(CurrentPage, @$"^{Navigation.BaseUri}\w+/sets/\d+/\d+/exercises"))
                {
                    <li class="breadcrumb-item active" aria-current="page">@Loc["Exercises"]</li>
                }
            }
        </ol>
    </nav>
</div>

@code {

    [Parameter]
    public required string CurrentPage { get; set; } = string.Empty;

}
