@using System.Text.RegularExpressions;

@inject NavigationManager Navigation
@inject IStringLocalizer<BreadcrumbNavigation> Loc

<div class="container-fluid mt-2">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-2">
            @if (Username is not null)
            {
                <li class="breadcrumb-item"><a href="@($"{Username}/profile")">@Username</a></li>

                @if (Regex.IsMatch(CurrentPage, @$"^{Navigation.BaseUri}\w+/sets(/\d+)?"))
                {
                    <li class="breadcrumb-item"><a href="@($"{Username}/sets")">@Loc["Folders"]</a></li>
                }
                @if (Regex.IsMatch(CurrentPage, @$"^{Navigation.BaseUri}\w+/sets/\d+"))
                {
                    <li class="breadcrumb-item"><a href="@($"{Username}/sets/{CurrentFolder!.Id}")">@CurrentFolder.Name</a></li>
                }
                @if (Regex.IsMatch(CurrentPage, @$"^{Navigation.BaseUri}\w+/sets/\d+/\d+"))
                {
                    <li class="breadcrumb-item"><a href="@($"{Username}/sets/{CurrentFolder!.Id}/{CurrentSet!.Id}")">@CurrentSet.Name</a></li>
                }
                @if (Regex.IsMatch(CurrentPage, @$"^{Navigation.BaseUri}\w+/sets/\d+/\d+/flashcards"))
                {
                    <li class="breadcrumb-item active" aria-current="page">@Loc["Flashcards"]</li>
                }
                @if (Regex.IsMatch(CurrentPage, @$"^{Navigation.BaseUri}\w+/sets/\d+/\d+/exercises"))
                {
                    <li class="breadcrumb-item active" aria-current="page">@Loc["Exercises"]</li>
                }
            }
        </ol>
    </nav>
</div>

@code {

    [Parameter]
    public required string CurrentPage { get; set; } = string.Empty;

    [Parameter]
    public string Username { get; set; } = string.Empty;

    [Parameter]
    public Folder? CurrentFolder { get; set; } 

    [Parameter]
    public Set? CurrentSet { get; set; }

}
