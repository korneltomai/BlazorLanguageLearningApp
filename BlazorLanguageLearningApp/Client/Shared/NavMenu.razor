@using System.Text.RegularExpressions;
@using BlazorLanguageLearningApp.Client.Components

@inject NavigationManager Navigation
@inject FolderService FolderService
@inject SetService SetService
@inject IStringLocalizer<NavMenu> Localization

<nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">
    <div class="container-fluid d-flex">
        <a class="navbar-brand" href="#">App Name</a>
        <button class="navbar-toggler" type="button" data-bs-target="#navbarMenu" data-bs-toggle="collapse" aria-controls="navbarMenu" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarMenu">
            <ul class="navbar-nav w-100">
                <li class="nav-item">   
                    <NavLink class="nav-link py-0" href="" Match="NavLinkMatch.All">
                        <div class="d-lg-none py-2" data-bs-target="#navbarMenu" data-bs-toggle="collapse">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-house-fill" viewBox="0 0 16 16">
                                <path d="M8.707 1.5a1 1 0 0 0-1.414 0L.646 8.146a.5.5 0 0 0 .708.708L8 2.207l6.646 6.647a.5.5 0 0 0 .708-.708L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293z" />
                                <path d="m8 3.293 6 6V13.5a1.5 1.5 0 0 1-1.5 1.5h-9A1.5 1.5 0 0 1 2 13.5V9.293z" />
                            </svg>
                            @Localization["Home"]
                        </div>
                        <div class="d-none d-lg-block py-2">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-house-fill" viewBox="0 0 16 16">
                                <path d="M8.707 1.5a1 1 0 0 0-1.414 0L.646 8.146a.5.5 0 0 0 .708.708L8 2.207l6.646 6.647a.5.5 0 0 0 .708-.708L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293z" />
                                <path d="m8 3.293 6 6V13.5a1.5 1.5 0 0 1-1.5 1.5h-9A1.5 1.5 0 0 1 2 13.5V9.293z" />
                            </svg>
                            @Localization["Home"]
                        </div>
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link py-0" href="sets">
                        <div class="d-lg-none py-2" data-bs-target="#navbarMenu" data-bs-toggle="collapse">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-copy" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M4 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2zm2-1a1 1 0 0 0-1 1v8a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1zM2 5a1 1 0 0 0-1 1v8a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1v-1h1v1a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h1v1z" />
                            </svg>
                            @Localization["Sets"]
                        </div>
                        <div class="d-none d-lg-block py-2">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-copy" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M4 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2zm2-1a1 1 0 0 0-1 1v8a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1zM2 5a1 1 0 0 0-1 1v8a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1v-1h1v1a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h1v1z" />
                            </svg>
                            @Localization["Sets"]
                        </div>
                    </NavLink>
                </li>

                <li class="nav-item dropdown ms-lg-auto my-auto">
                    <a class="dropdown-toggle nav-link text-light" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
                            <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0" />
                            <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1" />
                        </svg>
                        Username
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end border-0 py-0">
                        <li>
                            <NavLink class="nav-link dropdown-item bg-primary py-1" href="profile">
                                <div class="d-lg-none py-1 ps-3" data-bs-target="#navbarMenu" data-bs-toggle="collapse">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-person-fill" viewBox="0 0 16 16">
                                        <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6" />
                                    </svg>
                                    @Localization["Profile"]
                                </div>
                                <div class="d-none d-lg-block py-1">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-person-fill" viewBox="0 0 16 16">
                                        <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6" />
                                    </svg>
                                    @Localization["Profile"]
                                </div>
                            </NavLink>
                        </li>
                        <li>
                            <NavLink class="nav-link dropdown-item bg-primary pb-1" href="user-settings">
                                <div class="d-lg-none pb-1 ps-3" data-bs-target="#navbarMenu" data-bs-toggle="collapse">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-person-gear" viewBox="0 0 16 16">
                                        <path d="M11 5a3 3 0 1 1-6 0 3 3 0 0 1 6 0M8 7a2 2 0 1 0 0-4 2 2 0 0 0 0 4m.256 7a4.5 4.5 0 0 1-.229-1.004H3c.001-.246.154-.986.832-1.664C4.484 10.68 5.711 10 8 10q.39 0 .74.025c.226-.341.496-.65.804-.918Q8.844 9.002 8 9c-5 0-6 3-6 4s1 1 1 1zm3.63-4.54c.18-.613 1.048-.613 1.229 0l.043.148a.64.64 0 0 0 .921.382l.136-.074c.561-.306 1.175.308.87.869l-.075.136a.64.64 0 0 0 .382.92l.149.045c.612.18.612 1.048 0 1.229l-.15.043a.64.64 0 0 0-.38.921l.074.136c.305.561-.309 1.175-.87.87l-.136-.075a.64.64 0 0 0-.92.382l-.045.149c-.18.612-1.048.612-1.229 0l-.043-.15a.64.64 0 0 0-.921-.38l-.136.074c-.561.305-1.175-.309-.87-.87l.075-.136a.64.64 0 0 0-.382-.92l-.148-.045c-.613-.18-.613-1.048 0-1.229l.148-.043a.64.64 0 0 0 .382-.921l-.074-.136c-.306-.561.308-1.175.869-.87l.136.075a.64.64 0 0 0 .92-.382zM14 12.5a1.5 1.5 0 1 0-3 0 1.5 1.5 0 0 0 3 0" />
                                    </svg>
                                    @Localization["UserSettings"]
                                </div>
                                <div class="d-none d-lg-block pb-1">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-person-gear" viewBox="0 0 16 16">
                                        <path d="M11 5a3 3 0 1 1-6 0 3 3 0 0 1 6 0M8 7a2 2 0 1 0 0-4 2 2 0 0 0 0 4m.256 7a4.5 4.5 0 0 1-.229-1.004H3c.001-.246.154-.986.832-1.664C4.484 10.68 5.711 10 8 10q.39 0 .74.025c.226-.341.496-.65.804-.918Q8.844 9.002 8 9c-5 0-6 3-6 4s1 1 1 1zm3.63-4.54c.18-.613 1.048-.613 1.229 0l.043.148a.64.64 0 0 0 .921.382l.136-.074c.561-.306 1.175.308.87.869l-.075.136a.64.64 0 0 0 .382.92l.149.045c.612.18.612 1.048 0 1.229l-.15.043a.64.64 0 0 0-.38.921l.074.136c.305.561-.309 1.175-.87.87l-.136-.075a.64.64 0 0 0-.92.382l-.045.149c-.18.612-1.048.612-1.229 0l-.043-.15a.64.64 0 0 0-.921-.38l-.136.074c-.561.305-1.175-.309-.87-.87l.075-.136a.64.64 0 0 0-.382-.92l-.148-.045c-.613-.18-.613-1.048 0-1.229l.148-.043a.64.64 0 0 0 .382-.921l-.074-.136c-.306-.561.308-1.175.869-.87l.136.075a.64.64 0 0 0 .92-.382zM14 12.5a1.5 1.5 0 1 0-3 0 1.5 1.5 0 0 0 3 0" />
                                    </svg>
                                    @Localization["UserSettings"]
                                </div>
                            </NavLink>
                        </li>
                    </ul>
                </li>
            </ul>

            @if (Regex.IsMatch(CurrentPage, @$"^{Navigation.BaseUri}sets(/\d+)?$"))
            {
                <div class="folderSelectorContainer d-lg-none bg-light rounded mt-3 mb-1">
                    <div>
                        <h3 class="text-center pt-3">
                            <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-folder" viewBox="0 0 16 16">
                                <path d="M.54 3.87.5 3a2 2 0 0 1 2-2h3.672a2 2 0 0 1 1.414.586l.828.828A2 2 0 0 0 9.828 3h3.982a2 2 0 0 1 1.992 2.181l-.637 7A2 2 0 0 1 13.174 14H2.826a2 2 0 0 1-1.991-1.819l-.637-7a2 2 0 0 1 .342-1.31zM2.19 4a1 1 0 0 0-.996 1.09l.637 7a1 1 0 0 0 .995.91h10.348a1 1 0 0 0 .995-.91l.637-7A1 1 0 0 0 13.81 4zm4.69-1.707A1 1 0 0 0 6.172 2H2.5a1 1 0 0 0-1 .981l.006.139q.323-.119.684-.12h5.396z" />
                            </svg>
                            @Localization["Folders"]
                        </h3>

                        <div class="folderSelector overflow-auto">
                            @foreach (Folder folder in FolderService.GetAllFolders())
                            {
                                <div class="container justify-content-center">
                                    <a class="btn btn-primary w-100 mb-1" href="/sets/@folder.Id">
                                        <div data-bs-target ="#navbarMenu" data-bs-toggle="collapse">
                                            @folder.Name
                                        </div>
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="px-2 my-2">
                        <NewFolderModal />
                    </div>
                </div>
            }
            else if (Regex.IsMatch(CurrentPage, @$"^{Navigation.BaseUri}sets/\d+/\d+(/(practice|exercises))?$") && FolderService.CurrentFolder != null && SetService.CurrentSet != null)
            {
                <div class="d-lg-none">
                    <hr class="text-white" />
                    <ul class="navbar-nav w-100">
                        <li class="nav-item">
                            <NavLink class="nav-link p-0" href="@($"/sets/{FolderService.CurrentFolder.Id}/{@SetService.CurrentSet.Id}")" Match="NavLinkMatch.All">
                                <div class="py-2" data-bs-target="#navbarMenu" data-bs-toggle="collapse">
                                    @Localization["ViewSet"]
                                </div>
                            </NavLink>
                        </li>
                        <li class="nav-item">
                            <NavLink class="nav-link p-0" href="@($"/sets/{FolderService.CurrentFolder.Id}/{@SetService.CurrentSet.Id}/practice")">
                                <div class="py-2" data-bs-target="#navbarMenu" data-bs-toggle="collapse">
                                    @Localization["Practice"]
                                </div>
                            </NavLink>
                        </li>
                        <li class="nav-item">
                            <NavLink class="nav-link p-0" href="@($"/sets/{FolderService.CurrentFolder.Id}/{@SetService.CurrentSet.Id}/exercises")">
                                <div class="py-2" data-bs-target="#navbarMenu" data-bs-toggle="collapse">
                                    @Localization["Exercises"]
                                </div>
                            </NavLink>
                        </li>
                    </ul>  
                </div>
            }
        </div>
    </div>
</nav>




@code {
    [Parameter]
    public string CurrentPage { get; set; } = string.Empty;

    protected override void OnInitialized()
    {
        FolderService.OnChange.Add(StateHasChanged);
        SetService.OnChange.Add(StateHasChanged);
    }
}
